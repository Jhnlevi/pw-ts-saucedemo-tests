{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["@playwright/test", "@types/node", "node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@data/*": ["./src/data/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@pages/*": ["./src/pages/*"],
      "@fixtures/*": ["./src/fixtures/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    "dist",
    "playwright-report",
    "reports",
    "tests-results"
  ]
}
